<nav aria-label="breadcrumb">
  <ul>
    <li><a href="/">Home</a></li>

    <li>Recipes</li>
  </ul>
</nav>

<h1>
  List of all recipes
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new recipe
    </h2>
  </header>

  <form action="/insert_recipe" method="post">
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="description_box">
        Description
      </label>

      <textarea type="text" id="description_box" name="query_description"></textarea>
    </div>

    <button type="submit">
      Create recipe
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_recipes.each do |a_recipe| %>
      <li>
        <a href="/recipes/<%= a_recipe.id %>">
          <%= a_recipe.name %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
