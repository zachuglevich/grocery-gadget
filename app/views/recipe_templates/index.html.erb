<h1>
  List of all recipes
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new recipe
    </h2>
  </header>

  <form action="/insert_recipe" method="post">
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="description_box">
        Description
      </label>

      <input type="text" id="description_box" name="query_description">
    </div>

    <div>
      <label for="user_id_box">
        User
      </label>

      <input type="text" id="user_id_box" name="query_user_id">
    </div>

    <div>
      <label for="recipe_lines_count_box">
        Recipe lines count
      </label>

      <input type="text" id="recipe_lines_count_box" name="query_recipe_lines_count">
    </div>

    <button type="submit">
      Create recipe
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_recipes.each do |a_recipe| %>
      <li>
        <a href="/recipes/<%= a_recipe.id %>">
          Recipe #<%= a_recipe.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
