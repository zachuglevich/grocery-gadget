<h1>
  Ingredient #<%= @the_ingredient.id %> details
</h1>

<article>
  <div>
    <a href="/ingredients">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_ingredient/<%= @the_ingredient.id %>">
      Delete ingredient
    </a>
  </div>
  <dl>
    <dt>
      Name
    </dt>
    <dd>
      <%= @the_ingredient.name %>
    </dd>

    <dt>
      List lines count
    </dt>
    <dd>
      <%= @the_ingredient.list_lines_count %>
    </dd>

    <dt>
      Recipe lines count
    </dt>
    <dd>
      <%= @the_ingredient.recipe_lines_count %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_ingredient.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_ingredient.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit ingredient
    </h2>
  </header>

  <form action="/modify_ingredient/<%= @the_ingredient.id %>"  method="post" >
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name" value="<%= @the_ingredient.name %>">
    </div>

    <div>
      <label for="list_lines_count_box">
        List lines count
      </label>

      <input type="text" id="list_lines_count_box" name="query_list_lines_count" value="<%= @the_ingredient.list_lines_count %>">
    </div>

    <div>
      <label for="recipe_lines_count_box">
        Recipe lines count
      </label>

      <input type="text" id="recipe_lines_count_box" name="query_recipe_lines_count" value="<%= @the_ingredient.recipe_lines_count %>">
    </div>

    <button type="submit">
      Update ingredient
    </button>
  </form>
</article>

<hr>
